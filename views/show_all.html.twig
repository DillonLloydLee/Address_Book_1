<!DOCTYPE html>
<html>
    <head>
        <title>Address Book</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4",>
                    <h1 class="text-center">My Address Book</h1>

                        <div class="text-center">
                            <a class="btn btn-default" href="/"
                            role="button">View All Contacts</a>
                            <a class="btn btn-default" href="/add_contact_form"
                            role="button">Add New Contact</a>
                        </div>
                        <hr>

                    {% if contacts is empty %}
                        <h3 class="text-center">No Contacts Currently Saved.</h3>
                        <br>

                        <div class="text-center">
                            <a class="btn btn-default" href="/add_contact_form"
                            role="button">Add A New Contact</a>
                        </div>
                        <br>
                    {% endif %}

                    {% if contacts is not empty %}
                    <h3 class="text-center">List of Contacts:</h3>

                        {% for contact in contacts %}
                        <p><strong> {{ contact.getname }}</strong></p>
                        <ul>
                            <li>Phone: {{ contact.getnumber }}</li>
                            <li>Address: {{ contact.getaddress }}</li>
                        </ul>
                        <br>
                        {% endfor %}

                    {% endif %}

                    <hr>
                    <form class="text-center" action='delete_contacts' method='post'>
                        <div class='form-group'>
                            <button class='btn btn-danger' type='submit'>
                                Delete All Contacts</button>
                        </div>
                    </form>

                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </body>

</html>
